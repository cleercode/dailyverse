{
  "manifest_version": 2,

  "name": "DailyVerse",
  "description": "Daily Bible verses on your start page.",
  "version": "2.0",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_security_policy": "script-src 'self' https://www.biblegateway.com; object-src 'self'"
}